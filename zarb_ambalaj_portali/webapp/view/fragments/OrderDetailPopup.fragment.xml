<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="OrderDetailDialog"
        title="{i18n>OP_orderDetailTitle}"
        draggable="true"
        resizable="true"
        class="orderDetailDialog"
        contentWidth="600px"
        contentHeight="auto"
    >
        <VBox class="sapUiSmallMargin">
            <VBox class="sapUiSmallMargin">
                <HBox>
                    <Label
                        width="150px"
                        text="{i18n>OP_orderNumber}"
                        textAlign="Right"
                    />
                    <Input
                        value="{dm>/sSelectedEbelnRowData/Ebeln}"
                        width="100%"
                        editable="false"
                    />
                </HBox>

                <HBox>
                    <Label
                        width="150px"
                        text="{i18n>OP_orderItem}"
                        textAlign="Right"
                    />
                    <Input
                        value="{dm>/sSelectedEbelnRowData/Ebelp}"
                        width="100%"
                        editable="false"
                    />
                </HBox>

                <HBox>
                    <Label
                        width="150px"
                        text="{i18n>OP_termNumber}"
                        textAlign="Right"
                    />
                    <Input
                        value="{dm>/sSelectedEbelnRowData/Etenr}"
                        width="100%"
                        editable="false"
                    />
                </HBox>

                <HBox>
                    <Label
                        width="150px"
                        text="{i18n>OP_supplierName}"
                        textAlign="Right"
                    />
                    <Input
                        value="{dm>/sSelectedEbelnRowData/Name1}"
                        width="150%"
                        editable="false"
                    />
                </HBox>

                <HBox>
                    <Label
                        width="150px"
                        text="{i18n>OP_orderDate}"
                        textAlign="Right"
                    />
                    <Input
                        value="{
                        path: 'dm>/sSelectedEbelnRowData/CreateDate',
                        type: 'sap.ui.model.odata.type.DateTime',
                        formatOptions: { pattern: 'dd.MM.yyyy' }
                    }"
                        width="100%"
                        editable="false"
                    />
                </HBox>

                <HBox>
                    <Label
                        width="150px"
                        text="{i18n>OP_orderCreatedBy}"
                        textAlign="Right"
                    />
                    <Input
                        value="{dm>/sSelectedEbelnRowData/CreateUname}"
                        width="150%"
                        editable="false"
                    />
                </HBox>

                <HBox>
                    <Label
                        width="150px"
                        text="{i18n>OP_printCode}"
                        textAlign="Right"
                    />
                    <Input
                        value="{dm>/sSelectedEbelnRowData/Normt}"
                        width="100%"
                        editable="{pm>/detailPopup/NormtEdit}"
                    />
                </HBox>

                <HBox>
                    <Label
                        width="150px"
                        text="{i18n>OP_materialCode}"
                        textAlign="Right"
                    />
                    <Input
                        value="{dm>/sSelectedEbelnRowData/Matnr}"
                        width="100%"
                        editable="false"
                    />
                </HBox>

                <HBox>
                    <Label
                        width="150px"
                        text="{i18n>OP_materialDesc}"
                        textAlign="Right"
                    />
                    <Input
                        value="{dm>/sSelectedEbelnRowData/Txt01}"
                        width="150%"
                        editable="false"
                    />
                </HBox>

                <HBox>
                    <Label
                        width="150px"
                        text="{i18n>OP_materialGroup}"
                        textAlign="Right"
                    />
                    <Input
                        value="{dm>/sSelectedEbelnRowData/Matkl}"
                        width="100%"
                        editable="false"
                    />
                </HBox>
                <HBox>
                    <Label
                        width="150px"
                        text="{i18n>OP_materialGroupDesc}"
                        textAlign="Right"
                    />
                    <Input
                        value="{dm>/sSelectedEbelnRowData/MatklDesc}"
                        width="150%"
                        editable="false"
                    />
                </HBox>

                <HBox>
                    <Label
                        width="150px"
                        text="{i18n>OP_price}"
                        textAlign="Right"
                    />
                    <Input
                        value="{dm>/sSelectedEbelnRowData/Netpr}"
                        width="100%"
                        editable="false"
                    />
                </HBox>

                <HBox>
                    <Label
                        width="150px"
                        text="{i18n>OP_priceUnit}"
                        textAlign="Right"
                    />
                    <Input
                        value="{dm>/sSelectedEbelnRowData/Peinh}"
                        width="100%"
                        editable="false"
                    />
                </HBox>

                <HBox>
                    <Label
                        width="150px"
                        text="{i18n>OP_currency}"
                        textAlign="Right"
                    />
                    <Input
                        value="{dm>/sSelectedEbelnRowData/Waers}"
                        width="100%"
                        editable="false"
                    />
                </HBox>

                <HBox>
                    <Label
                        width="150px"
                        text="{i18n>OP_paymentTerm}"
                        textAlign="Right"
                    />
                    <Input
                        value="{dm>/sSelectedEbelnRowData/PaymentTerm}"
                        width="100%"
                        editable="false"
                    />
                </HBox>

                <HBox>
                    <Label
                        width="150px"
                        text="{i18n>OP_comment}"
                        textAlign="Right"
                    />
                    <TextArea
                        value="{dm>/sSelectedEbelnRowData/Desc1}"
                        rows="3"
                        width="150%"
                        editable="false"
                    />
                </HBox>

                <HBox visible="{pm>/detailPopup/BtnVisAddNote}">
                    <Label
                        width="150px"
                        text="{i18n>OP_addNote}"
                        textAlign="Right"
                    />
                    <TextArea
                        value="{dm>/detailPopupNote}"
                        rows="3"
                        width="150%"
                        editable="{pm>/detailPopup/BtnVisAddNote}"
                    />
                </HBox>
                <HBox visible="{pm>/detailPopup/BtnVisAddNote}">
                    <Label
                        width="150px"
                        text=""
                        textAlign="Right"
                    />
                    <Button
                        text="{i18n>OP_addNote}"
                        icon="sap-icon://add"
                        class="blueButton"
                        press="onApproveOrder"
                    />
                </HBox>
                <Table
                    id="OrderQuantityTable"
                    inset="false"
                    width="100%"
                    class="sapUiSmallMarginTop gridTable"
                    items="{dm>/sSelectedEbelnTableData}"
                >
                    <columns>
                        <Column>
                            <Text text="{i18n>quantity}" />
                        </Column>
                        <Column>
                            <Text text="{i18n>unit}" />
                        </Column>
                        <Column>
                            <Text text="{i18n>OP_firmDeliveryDate}" />
                        </Column>
                        <Column visible="{pm>/detailPopup/SlfdiVis}">
                            <Text text="{i18n>OP_reviseFirmDeliveryDate}" />
                        </Column>
                        <Column visible="{pm>/detailPopup/TesyrVis}">
                            <Text text="{i18n>OP_deliveryPlace}" />
                        </Column>
                        <Column visible="{pm>/detailPopup/PlakaVis}">
                            <Text text="{i18n>OP_plaka}" />
                        </Column>
                        <Column visible="{pm>/detailPopup/SoforVis}">
                            <Text text="{i18n>OP_driverPhone}" />
                        </Column>
                        <Column visible="{pm>/detailPopup/SevkmVis}">
                            <Text text="{i18n>OP_sevkQuantity}" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem>
                            <cells>
                                <Text text="{dm>Menge}" />
                                <Text text="{dm>Meins}" />
                                <Text
                                    text="{
                        path: 'dm>Slfdt',
                        type: 'sap.ui.model.odata.type.DateTime',
                        formatOptions: { pattern: 'dd.MM.yyyy' }
                    }"
                                />
                                <DatePicker
                                    value="{path: 'dm>Slfdi',
                        type: 'sap.ui.model.odata.type.DateTime',
                        formatOptions: {
                        pattern: 'dd.MM.yyyy'
                                                }
                                            }"
                                    displayFormat="short"
                                    editable="{pm>/detailPopup/SlfdiEdit}"
                                    visible="{pm>/detailPopup/SlfdiVis}"
                                />
                                <Input
                                    value="{dm>Tesyr}"
                                    editable="{pm>/detailPopup/TesyrVis}"
                                    visible="{pm>/detailPopup/TesyrVis}"
                                />
                                <Input
                                    value="{dm>Plaka}"
                                    editable="{pm>/detailPopup/PlakaVis}"
                                    visible="{pm>/detailPopup/PlakaVis}"
                                />
                                <Input
                                    value="{dm>Sofor}"
                                    editable="{pm>/detailPopup/SoforVis}"
                                    visible="{pm>/detailPopup/SoforVis}"
                                />
                                <Input
                                    value="{dm>Sevkm}"
                                    editable="{pm>/detailPopup/SevkmVis}"
                                    visible="{pm>/detailPopup/SevkmVis}"
                                />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>

            <Toolbar class="sapUiTinyMarginTop">
                <ToolbarSpacer />
                <Button
                    text="{i18n>OP_btnApprove}"
                    icon="sap-icon://accept"
                    class="greenButton"
                    press="onPressAction($event, 'AC')"
                    visible="{pm>/detailPopup/BtnVisApprove}"
                />

                <Button
                    text="{i18n>OP_btnReject}"
                    icon="sap-icon://sys-cancel"
                    class="redButton"
                    press="onPressAction($event, 'RJ')"
                    visible="{pm>/detailPopup/BtnVisReject}"
                />

                <Button
                    text="{i18n>OP_btnCancel}"
                    icon="sap-icon://cancel-maintenance"
                    class="redButton"
                    press="onPressAction($event, 'CN')"
                    visible="{pm>/detailPopup/BtnVisAiCancel}"
                />

                <Button
                    text="{i18n>OP_btnCancelAppr}"
                    icon="sap-icon://cancel-share"
                    class="greenButton"
                    press="onPressAction($event, 'CA')"
                    visible="{pm>/detailPopup/BtnVisTedCancAppr}"
                />

                <Button
                    text="{i18n>OP_btnCancelReject}"
                    icon="sap-icon://cancel-share"
                    class="redButton"
                    press="onPressAction($event, 'CR')"
                    visible="{pm>/detailPopup/BtnVisTedCancReject}"
                />

                <Button
                    text="{i18n>OP_btnCancelRevise}"
                    icon="sap-icon://cancel-share"
                    class="orangeButton"
                    press="onPressAction($event, 'CV')"
                    visible="{pm>/detailPopup/BtnVisTedCancRevise}"
                />

                <Button
                    text="{i18n>OP_btnRevise}"
                    icon="sap-icon://edit"
                    class="yellowButton"
                    press="onPressAction($event, 'RV')"
                    visible="{pm>/detailPopup/BtnVisRevise}"
                />

                <Button
                    text="{i18n>OP_btnSend}"
                    icon="sap-icon://send-task"
                    class="greenButton"
                    press="onPressAction($event, 'SD')"
                    visible="{pm>/detailPopup/BtnVisSend}"
                />

                <Button
                    text="{i18n>OP_btnSevk}"
                    icon="sap-icon://icon-truck-driver"
                    class="blueButton"
                    press="onPressAction($event, 'SE')"
                    visible="{pm>/detailPopup/BtnVisSevk}"
                />

                <Button
                    text="{i18n>OP_btnPK}"
                    icon="sap-icon://code1"
                    class="orangeButton"
                    press="onPressAction($event, 'PK')"
                    visible="{pm>/detailPopup/BtnVisPk}"
                />

                <Button
                    text="{i18n>OP_btnClose}"
                    icon="sap-icon://sys-cancel"
                    class="redButton"
                    press="onPressAction($event, 'CL')"
                />
            </Toolbar>
        </VBox>
    </Dialog>
</core:FragmentDefinition>
