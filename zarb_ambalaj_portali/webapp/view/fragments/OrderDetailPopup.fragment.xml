<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="OrderDetailDialog"
        title="{i18n>OP_orderDetailTitle}"
        draggable="true"
        resizable="true"
        class="orderDetailDialog"
        contentWidth="600px"
        contentHeight="auto"
    >
        <VBox class="sapUiSmallMargin">
            <VBox class="sapUiSmallMargin">
                <HBox>
                    <Label
                        width="150px"
                        text="{i18n>OP_orderNumber}"
                        textAlign="Right"
                    />
                    <Input
                        value="{dm>/sSelectedEbelnRowData/Ebeln}"
                        width="100%"
                        editable="false"
                    />
                </HBox>

                <HBox>
                    <Label
                        width="150px"
                        text="{i18n>OP_orderItem}"
                        textAlign="Right"
                    />
                    <Input
                        value="{dm>/sSelectedEbelnRowData/Ebelp}"
                        width="100%"
                        editable="false"
                    />
                </HBox>

                <HBox>
                    <Label
                        width="150px"
                        text="{i18n>OP_termNumber}"
                        textAlign="Right"
                    />
                    <Input
                        value="{dm>/sSelectedEbelnRowData/Etenr}"
                        width="100%"
                        editable="false"
                    />
                </HBox>

                <HBox>
                    <Label
                        width="150px"
                        text="{i18n>OP_supplierName}"
                        textAlign="Right"
                    />
                    <Input
                        value="{dm>/sSelectedEbelnRowData/Name1}"
                        width="150%"
                        editable="false"
                    />
                </HBox>

                <HBox>
                    <Label
                        width="150px"
                        text="{i18n>OP_orderDate}"
                        textAlign="Right"
                    />
                    <Input
                        value="{dm>/sSelectedEbelnRowData/CreateDate}"
                        width="100%"
                        editable="false"
                    />
                </HBox>

                <HBox>
                    <Label
                        width="150px"
                        text="{i18n>OP_orderCreatedBy}"
                        textAlign="Right"
                    />
                    <Input
                        value="{dm>/sSelectedEbelnRowData/CreateUname}"
                        width="150%"
                        editable="false"
                    />
                </HBox>

                <HBox>
                    <Label
                        width="150px"
                        text="{i18n>OP_printCode}"
                        textAlign="Right"
                    />
                    <Input
                        value="{dm>/sSelectedEbelnRowData/Normt}"
                        width="100%"
                        editable="false"
                    />
                </HBox>

                <HBox>
                    <Label
                        width="150px"
                        text="{i18n>OP_materialCode}"
                        textAlign="Right"
                    />
                    <Input
                        value="{dm>/sSelectedEbelnRowData/Matnr}"
                        width="100%"
                        editable="false"
                    />
                </HBox>

                <HBox>
                    <Label
                        width="150px"
                        text="{i18n>OP_materialDesc}"
                        textAlign="Right"
                    />
                    <Input
                        value="{dm>/sSelectedEbelnRowData/Txt01}"
                        width="150%"
                        editable="false"
                    />
                </HBox>

                <HBox>
                    <Label
                        width="150px"
                        text="{i18n>OP_materialGroup}"
                        textAlign="Right"
                    />
                    <Input
                        value="{dm>/sSelectedEbelnRowData/Matkl}"
                        width="100%"
                        editable="false"
                    />
                </HBox>
                <HBox>
                    <Label
                        width="150px"
                        text="{i18n>OP_materialGroupDesc}"
                        textAlign="Right"
                    />
                    <Input
                        value="{dm>/sSelectedEbelnRowData/MatklDesc}"
                        width="150%"
                        editable="false"
                    />
                </HBox>

                <HBox>
                    <Label
                        width="150px"
                        text="{i18n>OP_price}"
                        textAlign="Right"
                    />
                    <Input
                        value="{dm>/sSelectedEbelnRowData/Netpr}"
                        width="100%"
                        editable="false"
                    />
                </HBox>

                <HBox>
                    <Label
                        width="150px"
                        text="{i18n>OP_priceUnit}"
                        textAlign="Right"
                    />
                    <Input
                        value="{dm>/sSelectedEbelnRowData/Peinh}"
                        width="100%"
                        editable="false"
                    />
                </HBox>

                <HBox>
                    <Label
                        width="150px"
                        text="{i18n>OP_currency}"
                        textAlign="Right"
                    />
                    <Input
                        value="{dm>/sSelectedEbelnRowData/Waers}"
                        width="100%"
                        editable="false"
                    />
                </HBox>

                <HBox>
                    <Label
                        width="150px"
                        text="{i18n>OP_paymentTerm}"
                        textAlign="Right"
                    />
                    <Input
                        value="{dm>/sSelectedEbelnRowData/PaymentTerm}"
                        width="100%"
                        editable="false"
                    />
                </HBox>

                <HBox>
                    <Label
                        width="150px"
                        text="{i18n>OP_comment}"
                        textAlign="Right"
                    />
                    <TextArea
                        value="{dm>/sSelectedEbelnRowData/Note}"
                        rows="3"
                        width="150%"
                        editable="false"
                    />
                </HBox>

                <HBox>
                  <Label
                        width="150px"
                        text=""
                        textAlign="Right"
                    />
                    <Button
                        text="{i18n>OP_addNote}"
                        icon="sap-icon://add"
                        class="blueButton"
                        press="onApproveOrder"
                    />
                </HBox>
            </VBox>

            <Toolbar class="sapUiTinyMarginTop">
                <ToolbarSpacer />
                <Button
                    text="{i18n>OP_btnApprove}"
                    icon="sap-icon://accept"
                    class="greenButton"
                    press="onApproveOrder"
                />
                <Button
                    text="{i18n>OP_btnRevise}"
                    icon="sap-icon://edit"
                    class="yellowButton"
                    press="onReviseOrder"
                />
                <Button
                    text="{i18n>OP_btnClose}"
                    icon="sap-icon://sys-cancel"
                    class="redButton"
                    press="onCloseOrderDetailPopup"
                />
            </Toolbar>
        </VBox>
    </Dialog>
</core:FragmentDefinition>
