                selectionMode="None"
                enableColumnReordering="true"
                enableCellFilter="true"
                width="100%"
                rowMode="Interactive"
            >
                <t:columns>
                    <t:Column sortProperty="Lifnr">
                        <Label text="{i18n>supplierCode}" />
                        <t:template>
                            <Text text="{dm>Lifnr}" />
                        </t:template>
                    </t:Column>
                    <t:Column sortProperty="Name1">
                        <Label text="{i18n>supplierName}" />
                        <t:template>
                            <Text text="{dm>Name1}" />
                        </t:template>
                    </t:Column>
                    <t:Column sortProperty="Ebeln">
                        <Label text="{i18n>orderNumber}" />
                        <t:template>
                            <Link
                                text="{dm>Ebeln}"
                                wrapping="true"
                                press="onPressEbeln"
                            />
                        </t:template>
                    </t:Column>
                    <t:Column sortProperty="Ebelp">
                        <Label text="{i18n>orderItem}" />
                        <t:template>
                            <Text text="{dm>Ebelp}" />
                        </t:template>
                    </t:Column>
                    <t:Column sortProperty="Etenr">
